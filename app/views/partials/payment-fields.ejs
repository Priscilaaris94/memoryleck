<label>Date</label>
<input type="date" name="date" value="<%= payment.date %>">

<label>Amount</label>
<input type="number" name="amount" value="<%= payment.amount %>">

<label>Method</label>
<select name="method">
	<option value="Credit Card" <% if(payment.method == 'Credit Card'){ %>selected<% } %>>Credit Card</option>
	<option value="Check" <% if(payment.method == 'Check'){ %>selected<% } %>>Check</option>
	<option value="Paypal"<% if(payment.method == 'Paypal'){ %>selected<% } %>>Paypal</option>
</select>